{
  "name": "SellerCenter ASIN Opener",
  "description": "点击扩展图标以打开 Seller Central 搜索结果的第一项（为抓取 ASIN 做准备）",
  "permissions": ["activeTab", "scripting"], 
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": [
    "*://sellercentral.amazon.co.uk/*",
    "*://sellercentral.amazon.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
   "content_scripts": [
    {
      "matches": ["*://sellercentral.amazon.co.uk/*", "*://sellercentral.amazon.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "打开第一项"
  }
  
}